{
    "name": "ubermanu/sol",
    "description": "Small SOLID specification implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Emmanuel Vodor",
            "email": "manu@paca.happy-dev.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sol\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.4",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/dotenv": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.27"
    },
    "config": {
        "sort-packages": true
    }
}
